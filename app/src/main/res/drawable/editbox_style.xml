<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Set transparent color for the background -->
    <solid android:color="#00FFFFFF" /> <!-- Transparent background -->

    <!-- Set stroke (border) around the shape -->
    <stroke
        android:width="2dp"
    android:color="#FFFFFF" /> <!-- White stroke color -->

    <!-- Set corner radius if needed -->
    <corners android:radius="8dp" /> <!-- Radius in pixels -->
</shape>
